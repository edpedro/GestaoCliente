<%- include ("../partials/header.ejs") %>
<%- include ("../partials/homenavbar.ejs") %>

<body>
    <div class="container">
        <h2 class="mt-5">Criação de um novo plano</h2>
        <hr>
        <form action="/plans/store" method="POST">
            <div class="card">
                <div class="card-header">
                    <h4>Novo plano</h4>
                </div>
                <div class="card-body">
                    <input type="text" name="title" class="form-control" placeholder="Titulo do plano"><br>
                    <% if(title_msg.length > 0){ %>
                    <div class="alert alert-danger"><%= title_msg %></div>
                    <% } %>
                    <input type="text" name="list" class="form-control" placeholder="Nº de listas"><br>
                    <% if(list_msg.length > 0){ %>
                    <div class="alert alert-danger"><%= list_msg %></div>
                    <% } %>
                    <input type="text" name="client" class="form-control" placeholder="Nº de clientes"><br>
                    <input type="text" name="value" class="form-control" placeholder="Valor"><br>
                    <hr>
                    Permite importação de lista: <input type="checkbox" name="imports" id="import">
                </div>
                <div class="card-footer">
                    <button class="btn btn-success btn-block">Cadastrar</button>
                </div>

            </div>
        </form>
    </div>


</body>

<%- include ("../partials/footer.ejs") %>