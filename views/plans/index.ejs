<%- include ("../partials/header.ejs") %>
<%- include ("../partials/homenavbar.ejs") %>

<body>
    <div class="container"><br>
        <h2>Listagem de planos</h2>
        <hr>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Preço</th>
                    <th scope="col">Status</th>
                    <th scope="col">Ações</th>                     
                </tr>
            </thead>
            <tbody>
                <% lists.forEach(list => { %>
                <tr>
                    <td><%=list.id %></td>
                    <td><%=list.title %></td>
                    <td>R$<%=list.value %></td>
                    <td><%=list.deactivated %></td>
                    <td><a href="/plans/deactivated/<%=list.id %> ">Desativado</a></td>                                      
                </tr>    
                   <% }); %>
            </tbody>
        </table>
    </div>
</body>


